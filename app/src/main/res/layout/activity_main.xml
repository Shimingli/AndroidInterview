<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.interview.MainActivity">

        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="安卓单位换算的演示"
            android:id="@+id/tv_dp_unit_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="handler机制，打断点用的"
            android:id="@+id/btn_handler_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="merge、ViewStub 原理"
            android:id="@+id/btn_principle_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="view的工作原理及measure、layout、draw流程"
            android:id="@+id/btn_source_code_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="relativelayout和LinearLayout性能比较"
            android:id="@+id/btn_relative_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>